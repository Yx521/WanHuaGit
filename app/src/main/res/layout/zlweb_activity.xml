<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/webToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/blue_gradient_bg"
        android:theme="@style/AppTheme.ActionBar"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/web_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_120"
                android:enabled="true"

                android:text="2019Android高级面试..."
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16" />

            <ImageView
                android:id="@+id/islike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_210"
                android:src="@mipmap/ic_toolbar_like_n" />

        </RelativeLayout>


    </android.support.v7.widget.Toolbar>


    <FrameLayout
        android:id="@+id/webcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="@string/about_us"></FrameLayout>
</LinearLayout>