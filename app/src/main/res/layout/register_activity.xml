<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_bac"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/none"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/register_bac"
        android:visibility="gone" />


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/none"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />

    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/register_password_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_48"
        android:background="@drawable/bg_conner_grey"
        android:drawablePadding="@dimen/dp_20"
        android:drawableStart="@drawable/ic_register_password"
        android:hint="@string/register_password_hint"
        android:inputType="textPassword"
        android:padding="@dimen/dp_12"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@drawable/ed_color"

        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/register_account_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_above="@id/register_password_edit"
        android:layout_marginBottom="@dimen/dp_36"
        android:layout_marginEnd="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_48"
        android:background="@drawable/bg_conner_grey"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="@dimen/dp_20"

        android:drawableStart="@drawable/ic_email"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="@string/register_account_hint"
        android:inputType="number"
        android:padding="@dimen/dp_12"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@drawable/ed_color" />

    <EditText
        android:id="@+id/register_confirm_password_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_below="@id/register_password_edit"
        android:layout_marginEnd="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/bg_conner_grey"
        android:drawableLeft="@drawable/ic_register_password"
        android:drawablePadding="@dimen/dp_20"

        android:hint="@string/register_confirm_password_hint"
        android:inputType="textPassword"
        android:padding="@dimen/dp_12"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@drawable/ed_color" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_below="@id/register_confirm_password_edit"
        android:layout_marginEnd="@dimen/dp_48"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/bg_conner_green"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_21" />

</RelativeLayout>