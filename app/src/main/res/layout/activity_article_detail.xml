<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activitys.wlg.ArticleDetailActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/article_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:fitsSystemWindows="true"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

        android:background="@color/blue_toob"

        app:navigationIcon="@drawable/ic_arrow_back_white_24dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"

            android:src="@drawable/ic_toolbar_like_n"
            android:id="@+id/collect"/>
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"

                android:visibility="gone"
                android:src="@drawable/ic_toolbar_like_p"
                android:id="@+id/uncollect"/>
        </FrameLayout>
   </android.support.v7.widget.Toolbar>








    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/article_detail_web_view"
        android:layout_height="match_parent"/>

</LinearLayout>