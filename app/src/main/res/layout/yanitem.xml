<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_search_pager_group"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_130"
   android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorCard"
    >
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_320"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="@dimen/dp_110">

            <LinearLayout
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/icon_author"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="名字"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:id="@+id/name1"
                    android:textSize="@dimen/dp_17"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="@dimen/dp_110"
                    android:id="@+id/gongzhong"
                    android:layout_width="wrap_content"
                    android:textColor="#58a6e6"
                    android:text="公众号/鸿洋"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:text="fsddddddd"
                android:layout_marginLeft="8dp"
                android:id="@+id/title"
                android:textSize="@dimen/dp_16"
                android:layout_height="wrap_content" />
            <LinearLayout
              android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="@dimen/dp_8"
                    android:id="@+id/tao"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_like_article_not_selected" />
                <ImageView
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:id="@+id/biao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_time" />

                <TextView
                    android:id="@+id/data"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/comment_text"
                    tools:text="14小时之前" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
